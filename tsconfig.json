{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es2018",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*",
        "app.ts"
    ]
}